<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical">

    <View
        android:id="@+id/color_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/holo_blue_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/label_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="R" />

        <TextView
            android:id="@+id/progress_label_red"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:text="255" />

        <SeekBar
            android:id="@+id/seekbar_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/progress_label_red"
            android:layout_toRightOf="@id/label_red"
            android:max="255" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="4dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/label_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="G" />

        <TextView
            android:id="@+id/progress_label_green"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:text="255" />

        <SeekBar
            android:id="@+id/seekbar_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/progress_label_green"
            android:layout_toRightOf="@id/label_green"
            android:max="255" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="4dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/label_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="B" />

        <TextView
            android:id="@+id/progress_label_blue"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:text="255" />

        <SeekBar
            android:id="@+id/seekbar_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/progress_label_blue"
            android:layout_toRightOf="@id/label_blue"
            android:max="255" />
    </RelativeLayout>
</LinearLayout>